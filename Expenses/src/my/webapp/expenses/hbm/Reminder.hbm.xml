<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="my.webapp.expenses.entity">
	<class name="Reminder" table="REMINDER">
		<id name="id" column="id"><generator class="native" /></id>
		<timestamp name="lastUpdateTs" column="last_update_ts" />
		<property name="owner" column="owner" />
		<property name="deleted" column="deleted" />
		<property name="lastUpdateUr" column="last_update_ur" />

		<property name="msg" column="MSG" />
		<property name="remindDate" column="REMIND_DATE" />
		<property name="acknowledged" column="ACKNOWLEDGED" />
		
		<many-to-one name="tranx" column="TRANX_ID" class="Transaction" />
		
		<filter name="hideDeleted" />
	</class>
</hibernate-mapping>
